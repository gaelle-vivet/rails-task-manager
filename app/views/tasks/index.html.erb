<h1>My Tasks</h1>
<ul style="list-style:none">
<%@tasks.each do |task|%> <li>
  <% if task.completed == true %>
    <i class="fa-solid fa-circle-check"></i>
   <% else %>
   <i class="fa-regular fa-circle"></i>
   <% end %>
  <%= link_to task.title, task_path(task), style:"text-decoration:none"%>
  <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} , style:"text-decoration:none" do%>
  <i class="fa-regular fa-trash-can"></i></li>
  <%end%>
<%end%>
</ul>
<p><%=link_to "Add Task", new_task_path%></p>
