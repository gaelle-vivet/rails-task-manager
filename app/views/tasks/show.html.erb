<h2><%=@task.title%></h2>
<p><i class="fa-solid fa-rotate-left"></i>
<%=link_to "Back to the list", tasks_path%></p>
<p><%=@task.details%></p>
<p><%=@task.completed ? "This task is completed" : "This task is not completed yet"%></p>
<p><%=link_to "Edit Task", edit_task_path%></p>
<p><%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></p>
